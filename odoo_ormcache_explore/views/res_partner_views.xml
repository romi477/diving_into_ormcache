<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
		<field name="name">res.partner.form.inherit</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="priority" eval="50"/>
		<field name="arch" type="xml">
			<xpath expr="//page[@name='internal_notes']/." position="after">
				<page name="orm_cache" string="Orm Cache">
					<group string="Fields" name="fields">
						<field name="occupation"/>
						<field name="occupation_info"/>
						<field name="filter_names"/>
					</group>

					<button string="Call Cached Method" name="get_occupation_info" type="object"/>
					<button string="GET LRU Cache" name="get_lru_cache" type="object"/>
					<button string="FILTER LRU Cache" name="get_lru_cache" type="object" context="{'apply_filter': True}"/>
					<button string="Clear Fields" name="clear_lru_cache_field" type="object"/>
					<button string="Clear LRU" name="clear_lru_cache" type="object"/>

					<group string="LRU Cache" name="lru_cache">
						<field name="lru_cache_len"/>
						<field name="lru_cache"/>
					</group>
				</page>
			</xpath>
		</field>
	</record>

</odoo>